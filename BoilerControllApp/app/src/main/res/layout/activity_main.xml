<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.viktor.boilercontrollapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button1_text"
        android:textSize="@dimen/label_text_size"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textColor="@color/label_text_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/tb_boiler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="35dp"
            android:checked="false"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="ToggleButton"
            android:textSize="@dimen/indicator_text_size"/>

        <TextView
            android:id="@+id/tv_boiler_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:elevation="15dp"
            android:gravity="left"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="25C"
            android:textSize="@dimen/indicator_text_size"
            android:visibility="visible"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button2_text"
        android:textSize="@dimen/label_text_size"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textColor="@color/label_text_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/tb_heating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="35dp"
            android:checked="false"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="ToggleButton"
            android:textSize="@dimen/indicator_text_size"/>

        <TextView
            android:id="@+id/tv_heating_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:elevation="15dp"
            android:gravity="left"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="25C"
            android:textSize="@dimen/indicator_text_size"
            android:visibility="visible"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button3_text"
        android:textSize="@dimen/label_text_size"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textColor="@color/label_text_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/tb_pool_heating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="35dp"
            android:checked="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ToggleButton"
            android:textSize="@dimen/indicator_text_size"/>

    </RelativeLayout>
</LinearLayout>
