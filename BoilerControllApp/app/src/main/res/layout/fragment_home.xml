<android.support.v4.widget.SwipeRefreshLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viktor.boilercontrollapp.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/background_gif"
        android:layout_height="172dp"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:src="@drawable/app_background" />

    <Button
        android:id="@+id/boiler_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boiler"
        android:background="@drawable/button_on_off_transition"
        android:layout_gravity="end"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/heating_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heating"
        android:background="@drawable/button_off"
        android:layout_gravity="end"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/pool_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pool heating"
        android:background="@drawable/button_on"
        android:layout_gravity="end"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="30dp"/>


    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
