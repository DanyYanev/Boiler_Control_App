<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.viktor.boilercontrollapp.SettingsFragment">

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/degree_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:ss_animationDuration="600"
        app:ss_animationType="line"
        app:ss_iconPadding="18dp"
        app:ss_iconSize="22dp"
        app:ss_leftIcon="@drawable/ic_celsius"
        app:ss_leftText="Celsius"
        app:ss_rightIcon="@drawable/ic_fahrenheit"
        app:ss_rightText="Fahrenheit"
        app:ss_selectedTextSize="14sp"
        app:ss_sliderBackgroundColor="#EAEAEA"
        app:ss_switchColor="#5ed6ff"
        app:ss_textColor="@android:color/black"
        app:ss_textSize="12sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/user_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="User name"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Server URL"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:inputType="textPersonName" />


</LinearLayout>
